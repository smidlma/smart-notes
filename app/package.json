{
  "name": "smart-notes",
  "main": "expo-router/entry",
  "version": "1.0.0",
  "scripts": {
    "dev": "expo start",
    "dev:build": "expo run:ios --device --no-build-cache",
    "lint:fix": "eslint --fix --ext .js,.ts,.tsx .",
    "lint": "expo lint",
    "editor:dev": "vite --config ./editor-web/vite.config.ts -w build",
    "editor:build": "vite --config ./editor-web/vite.config.ts build && yarn editor:post-build",
    "editor:post-build": "node ./node_modules/@10play/tentap-editor/scripts/buildEditor.js ./editor-web/build/index.html",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "generate": "npx @rtk-query/codegen-openapi openapi-config.ts",
    "prepare": "husky",
    "typecheck": "tsc --noEmit"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "jest": {
    "preset": "jest-expo"
  },
  "dependencies": {
    "@10play/tentap-editor": "^0.5.23",
    "@expo/vector-icons": "^14.0.2",
    "@react-native-async-storage/async-storage": "1.23.1",
    "@react-native-google-signin/google-signin": "^13.1.0",
    "@react-navigation/bottom-tabs": "^7.0.0",
    "@react-navigation/elements": "^2.1.1",
    "@react-navigation/native": "^7.0.0",
    "@reduxjs/toolkit": "^2.4.0",
    "@rn-primitives/slot": "^1.1.0",
    "@rn-primitives/tabs": "^1.1.0",
    "@rn-primitives/types": "^1.1.0",
    "@tiptap/extension-character-count": "^2.9.1",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "color-alpha": "^2.0.0",
    "date-fns": "^4.1.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "expo": "~52.0.7",
    "expo-asset": "~11.0.1",
    "expo-audio": "~0.2.3",
    "expo-blur": "~14.0.1",
    "expo-constants": "~17.0.3",
    "expo-dev-client": "~5.0.2",
    "expo-document-picker": "~13.0.1",
    "expo-file-system": "~18.0.3",
    "expo-font": "~13.0.1",
    "expo-haptics": "~14.0.0",
    "expo-image": "~2.0.1",
    "expo-linear-gradient": "~14.0.1",
    "expo-linking": "~7.0.2",
    "expo-localization": "~16.0.0",
    "expo-router": "~4.0.6",
    "expo-secure-store": "~14.0.0",
    "expo-splash-screen": "~0.29.11",
    "expo-status-bar": "~2.0.0",
    "expo-symbols": "~0.2.0",
    "expo-system-ui": "~4.0.3",
    "expo-web-browser": "~14.0.1",
    "i18next": "^23.16.5",
    "intl-pluralrules": "^2.0.1",
    "jwt-decode": "^4.0.0",
    "lucide-react-native": "^0.460.0",
    "moti": "^0.29.0",
    "nativewind": "^4.1.23",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-i18next": "^15.1.1",
    "react-native": "0.76.2",
    "react-native-gesture-handler": "~2.20.2",
    "react-native-reanimated": "~3.16.1",
    "react-native-safe-area-context": "4.12.0",
    "react-native-screens": "~4.1.0",
    "react-native-svg": "15.8.0",
    "react-native-web": "~0.19.13",
    "react-native-webview": "13.12.2",
    "react-redux": "^9.1.2",
    "tailwind-merge": "^2.5.4",
    "tailwindcss": "^3.4.15"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@eslint/compat": "^1.2.3",
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.15.0",
    "@faker-js/faker": "^9.2.0",
    "@rtk-query/codegen-openapi": "^2.0.0",
    "@types/jest": "^29.5.12",
    "@types/react": "~18.3.12",
    "@types/react-test-renderer": "^18.3.0",
    "eslint": "^8.57.1",
    "eslint-config-expo": "^8.0.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-native": "^4.1.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "husky": "^9.1.7",
    "jest": "^29.2.1",
    "jest-expo": "~52.0.2",
    "prettier": "^3.3.3",
    "react-test-renderer": "18.3.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "vite": "^5.4.11",
    "vite-plugin-singlefile": "^2.0.3"
  },
  "private": true
}
